    xmlns:local="using:UWP_EXAM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center">
        <TextBlock FontSize="30" TextAlignment="Center" Margin="30" FontWeight="ExtraBold">MENU</TextBlock>
        <Button x:ConnectionId='2' FontSize="20" Margin="10"                            Padding="15" MinWidth="350">ADD CONTACT</Button>
        <Button x:ConnectionId='3' FontSize="20" Margin="10"                               Padding="15" MinWidth="350">SEARCH CONTACT</Button>
        <Button x:ConnectionId='4' FontSize="20" Margin="10"                             Padding="15" MinWidth="350">LIST CONTACT</Button>
    </StackPanel>
</Page>

